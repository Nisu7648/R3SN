{
  "name": "Simple GitHub Stats Workflow",
  "description": "Fetch GitHub repository stats and send to Slack",
  "nodes": [
    {
      "id": "1",
      "type": "http",
      "displayName": "Get GitHub Repo",
      "config": {
        "url": "https://api.github.com/repos/Nisu7648/R3SN",
        "method": "GET",
        "headers": {
          "Accept": "application/vnd.github.v3+json"
        }
      },
      "position": { "x": 100, "y": 100 }
    },
    {
      "id": "2",
      "type": "transform",
      "displayName": "Extract Stats",
      "config": {
        "code": "return { name: data.name, stars: data.stargazers_count, forks: data.forks_count, issues: data.open_issues_count, language: data.language, description: data.description };"
      },
      "position": { "x": 300, "y": 100 }
    },
    {
      "id": "3",
      "type": "integration",
      "displayName": "Send to Slack",
      "config": {
        "integration": "slack",
        "action": "sendMessage",
        "params": {
          "channel": "#github-stats",
          "text": "ğŸ“Š *{{name}}* Repository Stats\\nâ­ Stars: {{stars}}\\nğŸ´ Forks: {{forks}}\\nğŸ› Open Issues: {{issues}}\\nğŸ’» Language: {{language}}\\nğŸ“ {{description}}"
        }
      },
      "position": { "x": 500, "y": 100 }
    }
  ],
  "edges": [
    {
      "source": "1",
      "target": "2"
    },
    {
      "source": "2",
      "target": "3"
    }
  ],
  "settings": {
    "timeout": 30000,
    "retryAttempts": 2,
    "retryDelay": 1000
  },
  "tags": ["github", "slack", "monitoring"],
  "enabled": true
}
