# R3SN Environment Configuration

# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=r3sn
DB_USER=postgres
DB_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI (for AI-powered features)
OPENAI_API_KEY=your_openai_api_key

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d

# Android
ANDROID_PACKAGE_NAME=com.r3sn
ANDROID_MIN_SDK=24
ANDROID_TARGET_SDK=34

# Plugin Factory
PLUGIN_GENERATION_TIMEOUT=30000
MAX_PLUGIN_SIZE=5242880

# Agent Engine
MAX_PARALLEL_AGENTS=Infinity
AGENT_TIMEOUT=60000
CONTEXT_CACHE_TTL=3600

# Integration Hub
INTEGRATION_RETRY_ATTEMPTS=3
INTEGRATION_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/r3sn.log

# Features
ENABLE_AUTO_PLUGIN_GENERATION=true
ENABLE_PREDICTIVE_AUTOMATION=true
ENABLE_CLOUD_SYNC=false
