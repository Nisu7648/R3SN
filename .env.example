# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database
MONGODB_URI=mongodb://localhost:27017/r3sn

# Redis (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@r3sn.io

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# Android Plugin Factory
ANDROID_ADB_PATH=/usr/local/bin/adb
ANDROID_DEVICE_ID=

# Integration Credentials (Examples)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SELF_EVOLVING=true
ENABLE_SELF_DEBUGGING=true
ENABLE_PLUGIN_FACTORY=true
ENABLE_UNLIMITED_AGENTS=true

# Performance
MAX_CONCURRENT_EXECUTIONS=100
EXECUTION_TIMEOUT=300000
WORKER_THREADS=4

# Security
ENABLE_2FA=false
SESSION_SECRET=your-session-secret
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# API Keys (for integrations)
STRIPE_SECRET_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
SENDGRID_API_KEY=
