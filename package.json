{
  "name": "r3sn",
  "version": "1.0.0",
  "description": "R3SN - Revolutionary AI Automation Platform with 800+ integrations, unlimited AI agents, and universal executor. 100% Complete & Production-Ready.",
  "main": "backend/server.js",
  "scripts": {
    "start": "NODE_ENV=production node backend/server.js",
    "dev": "NODE_ENV=development nodemon backend/server.js",
    "test": "jest --coverage",
    "test:api": "jest backend/tests/api.test.js",
    "test:watch": "jest --watch",
    "seed": "node backend/scripts/seed.js",
    "validate": "node backend/scripts/validate.js",
    "health": "node backend/scripts/health-check.js",
    "lint": "eslint backend/**/*.js",
    "lint:fix": "eslint backend/**/*.js --fix",
    "docker:build": "docker build -t r3sn:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:restart": "docker-compose restart app",
    "docker:seed": "docker-compose exec app npm run seed",
    "docker:validate": "docker-compose exec app npm run validate",
    "docker:health": "docker-compose exec app npm run health",
    "pm2:start": "pm2 start backend/server.js --name r3sn",
    "pm2:stop": "pm2 stop r3sn",
    "pm2:restart": "pm2 restart r3sn",
    "pm2:logs": "pm2 logs r3sn",
    "pm2:monit": "pm2 monit",
    "backup:db": "mongodump --uri=$MONGODB_URI --out=./backups/$(date +%Y%m%d)",
    "restore:db": "mongorestore --uri=$MONGODB_URI",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:clear": "rm -rf logs/*.log"
  },
  "keywords": [
    "automation",
    "ai",
    "agents",
    "workflows",
    "integrations",
    "plugins",
    "orchestration",
    "universal-executor",
    "enterprise",
    "production-ready",
    "openai",
    "mongodb",
    "redis",
    "docker"
  ],
  "author": "R3SN Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.1.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.12.0",
    "openai": "^4.24.1",
    "axios": "^1.6.5",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.6.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/tests/**",
      "!backend/scripts/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nisu7648/R3SN.git"
  },
  "bugs": {
    "url": "https://github.com/Nisu7648/R3SN/issues"
  },
  "homepage": "https://github.com/Nisu7648/R3SN#readme"
}
