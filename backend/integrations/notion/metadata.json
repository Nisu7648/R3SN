{
  "name": "notion",
  "displayName": "Notion",
  "version": "1.0.0",
  "description": "Complete Notion integration with 20 endpoints for pages, databases, blocks, users, and search",
  "category": "productivity",
  "icon": "https://cdn.worldvectorlogo.com/logos/notion-logo-1.svg",
  "authentication": {
    "type": "bearer",
    "tokenType": "Bearer"
  },
  "baseUrl": "https://api.notion.com/v1",
  "rateLimit": {
    "perSecond": 3,
    "burstLimit": 3
  },
  "endpoints": [
    {"id": "list_databases", "name": "List Databases", "method": "GET", "path": "/databases", "description": "List all databases"},
    {"id": "get_database", "name": "Get Database", "method": "GET", "path": "/databases/{id}", "description": "Get database details"},
    {"id": "query_database", "name": "Query Database", "method": "POST", "path": "/databases/{id}/query", "description": "Query database entries"},
    {"id": "create_database", "name": "Create Database", "method": "POST", "path": "/databases", "description": "Create a new database"},
    {"id": "update_database", "name": "Update Database", "method": "PATCH", "path": "/databases/{id}", "description": "Update database properties"},
    {"id": "get_page", "name": "Get Page", "method": "GET", "path": "/pages/{id}", "description": "Get page details"},
    {"id": "create_page", "name": "Create Page", "method": "POST", "path": "/pages", "description": "Create a new page"},
    {"id": "update_page", "name": "Update Page", "method": "PATCH", "path": "/pages/{id}", "description": "Update page properties"},
    {"id": "archive_page", "name": "Archive Page", "method": "PATCH", "path": "/pages/{id}", "description": "Archive a page"},
    {"id": "get_block", "name": "Get Block", "method": "GET", "path": "/blocks/{id}", "description": "Get block details"},
    {"id": "get_block_children", "name": "Get Block Children", "method": "GET", "path": "/blocks/{id}/children", "description": "Get block children"},
    {"id": "append_block_children", "name": "Append Block Children", "method": "PATCH", "path": "/blocks/{id}/children", "description": "Append children to block"},
    {"id": "update_block", "name": "Update Block", "method": "PATCH", "path": "/blocks/{id}", "description": "Update block content"},
    {"id": "delete_block", "name": "Delete Block", "method": "DELETE", "path": "/blocks/{id}", "description": "Delete a block"},
    {"id": "list_users", "name": "List Users", "method": "GET", "path": "/users", "description": "List all users"},
    {"id": "get_user", "name": "Get User", "method": "GET", "path": "/users/{id}", "description": "Get user details"},
    {"id": "get_me", "name": "Get Me", "method": "GET", "path": "/users/me", "description": "Get current bot user"},
    {"id": "search", "name": "Search", "method": "POST", "path": "/search", "description": "Search pages and databases"},
    {"id": "add_comment", "name": "Add Comment", "method": "POST", "path": "/comments", "description": "Add comment to page"},
    {"id": "get_comments", "name": "Get Comments", "method": "GET", "path": "/comments", "description": "Get page comments"}
  ]
}
