      "id": "list_products",
      "name": "List Products",
      "method": "GET",
      "path": "/catalog/products",
      "description": "Get all products"
    },
    {
      "id": "get_product",
      "name": "Get Product",
      "method": "GET",
      "path": "/catalog/products/{product_id}",
      "description": "Get a specific product"
    },
    {
      "id": "create_product",
      "name": "Create Product",
      "method": "POST",
      "path": "/catalog/products",
      "description": "Create a new product"
    },
    {
