{
  "name": "bigcommerce",
  "displayName": "BigCommerce",
  "version": "1.0.0",
  "description": "Complete BigCommerce integration with 52 endpoints for products, orders, customers, categories, carts, and store management",
  "category": "ecommerce",
  "icon": "https://cdn.worldvectorlogo.com/logos/bigcommerce.svg",
  "authentication": {
    "type": "apikey",
    "tokenType": "X-Auth-Token",
    "scopes": [
      "store_v2_products",
      "store_v2_orders",
      "store_v2_customers",
      "store_v2_content"
    ]
  },
  "baseUrl": "https://api.bigcommerce.com/stores/{store_hash}/v3",
  "rateLimit": {
    "quota": 20000,
    "perHour": 20000,
    "perSecond": 2
  },
