{
  "name": "pipedrive",
  "displayName": "Pipedrive",
  "version": "1.0.0",
  "description": "Complete Pipedrive CRM integration with 25 endpoints for deals, contacts, activities, and pipelines",
  "category": "crm",
  "icon": "https://www.pipedrive.com/favicon.ico",
  "authentication": {"type": "api_key", "tokenType": "Bearer"},
  "baseUrl": "https://api.pipedrive.com/v1",
  "rateLimit": {"perSecond": 10},
  "endpoints": [
    {"id": "list_deals", "name": "List Deals", "method": "GET", "path": "/deals"},
    {"id": "get_deal", "name": "Get Deal", "method": "GET", "path": "/deals/{id}"},
    {"id": "create_deal", "name": "Create Deal", "method": "POST", "path": "/deals"},
    {"id": "update_deal", "name": "Update Deal", "method": "PUT", "path": "/deals/{id}"},
    {"id": "delete_deal", "name": "Delete Deal", "method": "DELETE", "path": "/deals/{id}"},
    {"id": "list_persons", "name": "List Persons", "method": "GET", "path": "/persons"},
    {"id": "get_person", "name": "Get Person", "method": "GET", "path": "/persons/{id}"},
    {"id": "create_person", "name": "Create Person", "method": "POST", "path": "/persons"},
    {"id": "update_person", "name": "Update Person", "method": "PUT", "path": "/persons/{id}"},
    {"id": "list_organizations", "name": "List Organizations", "method": "GET", "path": "/organizations"},
    {"id": "create_organization", "name": "Create Organization", "method": "POST", "path": "/organizations"},
    {"id": "list_activities", "name": "List Activities", "method": "GET", "path": "/activities"},
    {"id": "create_activity", "name": "Create Activity", "method": "POST", "path": "/activities"},
    {"id": "update_activity", "name": "Update Activity", "method": "PUT", "path": "/activities/{id}"},
    {"id": "list_pipelines", "name": "List Pipelines", "method": "GET", "path": "/pipelines"},
    {"id": "get_pipeline", "name": "Get Pipeline", "method": "GET", "path": "/pipelines/{id}"},
    {"id": "list_stages", "name": "List Stages", "method": "GET", "path": "/stages"},
    {"id": "list_products", "name": "List Products", "method": "GET", "path": "/products"},
    {"id": "create_product", "name": "Create Product", "method": "POST", "path": "/products"},
    {"id": "list_notes", "name": "List Notes", "method": "GET", "path": "/notes"},
    {"id": "create_note", "name": "Create Note", "method": "POST", "path": "/notes"},
    {"id": "list_files", "name": "List Files", "method": "GET", "path": "/files"},
    {"id": "upload_file", "name": "Upload File", "method": "POST", "path": "/files"},
    {"id": "list_users", "name": "List Users", "method": "GET", "path": "/users"},
    {"id": "get_user", "name": "Get User", "method": "GET", "path": "/users/{id}"}
  ]
}
