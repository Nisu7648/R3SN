{
  "name": "bitbucket",
  "displayName": "Bitbucket",
  "version": "1.0.0",
  "description": "Complete Bitbucket integration with 25 endpoints for repositories, pull requests, commits, and pipelines",
  "category": "development",
  "icon": "https://bitbucket.org/favicon.ico",
  "authentication": {"type": "basic", "tokenType": "Basic"},
  "baseUrl": "https://api.bitbucket.org/2.0",
  "rateLimit": {"perHour": 1000},
  "endpoints": [
    {"id": "list_repos", "name": "List Repositories", "method": "GET", "path": "/repositories/{workspace}"},
    {"id": "get_repo", "name": "Get Repository", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}"},
    {"id": "create_repo", "name": "Create Repository", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}"},
    {"id": "delete_repo", "name": "Delete Repository", "method": "DELETE", "path": "/repositories/{workspace}/{repo_slug}"},
    {"id": "list_branches", "name": "List Branches", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/refs/branches"},
    {"id": "create_branch", "name": "Create Branch", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/refs/branches"},
    {"id": "list_commits", "name": "List Commits", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/commits"},
    {"id": "get_commit", "name": "Get Commit", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/commit/{commit}"},
    {"id": "list_prs", "name": "List Pull Requests", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/pullrequests"},
    {"id": "get_pr", "name": "Get Pull Request", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/pullrequests/{pr_id}"},
    {"id": "create_pr", "name": "Create Pull Request", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/pullrequests"},
    {"id": "update_pr", "name": "Update Pull Request", "method": "PUT", "path": "/repositories/{workspace}/{repo_slug}/pullrequests/{pr_id}"},
    {"id": "merge_pr", "name": "Merge Pull Request", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/pullrequests/{pr_id}/merge"},
    {"id": "decline_pr", "name": "Decline Pull Request", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/pullrequests/{pr_id}/decline"},
    {"id": "list_issues", "name": "List Issues", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/issues"},
    {"id": "get_issue", "name": "Get Issue", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/issues/{issue_id}"},
    {"id": "create_issue", "name": "Create Issue", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/issues"},
    {"id": "update_issue", "name": "Update Issue", "method": "PUT", "path": "/repositories/{workspace}/{repo_slug}/issues/{issue_id}"},
    {"id": "list_pipelines", "name": "List Pipelines", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/pipelines"},
    {"id": "get_pipeline", "name": "Get Pipeline", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/pipelines/{pipeline_uuid}"},
    {"id": "trigger_pipeline", "name": "Trigger Pipeline", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/pipelines"},
    {"id": "list_webhooks", "name": "List Webhooks", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/hooks"},
    {"id": "create_webhook", "name": "Create Webhook", "method": "POST", "path": "/repositories/{workspace}/{repo_slug}/hooks"},
    {"id": "list_deployments", "name": "List Deployments", "method": "GET", "path": "/repositories/{workspace}/{repo_slug}/deployments"},
    {"id": "get_user", "name": "Get User", "method": "GET", "path": "/user"}
  ]
}
