{
  "name": "salesforce",
  "displayName": "Salesforce",
  "version": "1.0.0",
  "description": "Complete Salesforce CRM integration with 40+ endpoints for leads, accounts, contacts, opportunities, and custom objects",
  "category": "crm",
  "icon": "https://cdn.worldvectorlogo.com/logos/salesforce-2.svg",
  "authentication": {
    "type": "oauth2",
    "tokenType": "Bearer",
    "scopes": [
      "api",
      "refresh_token",
      "full"
    ]
  },
  "baseUrl": "https://{instance}.salesforce.com/services/data/v59.0",
  "rateLimit": {
    "quota": 15000,
    "perDay": 15000,
    "concurrent": 25
  },
