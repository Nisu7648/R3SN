      "id": "list_leads",
      "name": "List Leads",
      "method": "GET",
      "path": "/sobjects/Lead",
      "description": "Get all leads"
    },
    {
      "id": "get_lead",
      "name": "Get Lead",
      "method": "GET",
      "path": "/sobjects/Lead/{id}",
      "description": "Get a specific lead"
    },
    {
